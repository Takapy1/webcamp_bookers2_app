<h2 class="mt-3">New book</h2>
<% form_with model: book, url: books_path(user), local:true do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :opinion %><br />
    <%= f.text_area :opinion, autofocus: true %>
  </div>
  <div class="actions">
    <%= f.submit 'Create Book', class: "btn btn-success" %>
  </div>
<% end %>